            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />
        <com.rey.material.widget.CheckBox
            android:id="@+id/analytics_quarterly"
            android:layout_marginLeft="5dp"
            style="@style/Material.Drawable.CheckBox"
            app:cbd_strokeColor="@color/fbutton_color_silver"
            android:enabled="false"
            android:text="quarterly"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.rey.material.widget.CheckBox
            android:id="@+id/analytics_semi_anually"
            style="@style/Material.Drawable.CheckBox"
            app:cbd_strokeColor="@color/fbutton_color_silver"
            android:enabled="false"
            android:text="semi-anually"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.rey.material.widget.CheckBox
            android:id="@+id/analytics_anually"
            android:layout_marginLeft="5dp"
            style="@style/Material.Drawable.CheckBox"
            app:cbd_strokeColor="@color/fbutton_color_silver"
            android:enabled="false"
            android:text="anually"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/analytics_next"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:text="NEXT"
            android:layout_width="wrap_content"
