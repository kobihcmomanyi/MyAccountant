<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:text="select category in which the expenses fall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <org.angmarch.views.NiceSpinner
            android:id="@+id/add_expense_category_spinner"
            android:background="#383838"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/add_expense_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_baseColor="@color/secondary_color"
            app:met_primaryColor="@color/fbutton_color_alizarin"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="1"
            app:met_maxCharacters="15"
            app:met_clearButton="true"
            app:met_helperText=""
            android:hint="Name"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/add_expense_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_baseColor="@color/secondary_color"
            app:met_primaryColor="@color/fbutton_color_alizarin"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="1"
            app:met_clearButton="true"
            app:met_helperText=""
            android:hint="Description"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/add_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_baseColor="@color/secondary_color"
            app:met_primaryColor="@color/fbutton_color_alizarin"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="1"
            android:inputType="number"
            app:met_clearButton="true"
            app:met_helperText="enter numbers only"
            android:hint="Amount"/>


        <com.rey.material.widget.Button
            android:id="@+id/save_btn"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="50dp"
            app:rd_enable="true"
            android:background="@color/fbutton_color_alizarin"
            style="@style/Material.Drawable.Ripple.Touch"
            android:textColor="#ffffff"
            android:text="save"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>
</ScrollView>