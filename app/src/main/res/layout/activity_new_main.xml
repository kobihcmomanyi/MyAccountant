<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@drawable/accountant_image2"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ProgressBar
            android:id="@+id/home_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/app_title"
            android:text="My Accountant"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/app_logo"
            android:src="@mipmap/logo"
            android:gravity="right"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/fbutton_color_silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/business_info"
                android:src="@mipmap/ic_business_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Business Info"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
        <View
            android:background="@color/fbutton_color_silver"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sales"
                android:src="@mipmap/ic_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Sales"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
        <View
            android:background="@color/fbutton_color_silver"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/purchases"
                android:src="@mipmap/ic_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Purchases"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/fbutton_color_silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/expenses"
                android:src="@mipmap/ic_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Expenses"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
        <View
            android:background="@color/fbutton_color_silver"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/other_income"
                android:src="@mipmap/ic_other_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="other income"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
        <View
            android:background="@color/fbutton_color_silver"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/progress_report"
                android:src="@mipmap/ic_progress_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Reports"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/fbutton_color_silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/faqs"
                android:src="@mipmap/ic_faqs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="FAQs"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
        <View
            android:background="@color/fbutton_color_silver"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/feedback"
                android:src="@mipmap/ic_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Feedback"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
        <View
            android:background="@color/fbutton_color_silver"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logout"
                android:src="@mipmap/ic_login_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Logout"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Business Info"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/green"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/signUpButton"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor="@color/green"
            app:fab_iconSrc="@mipmap/ic_add"
            app:fab_elevation="1dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/copyrightText"
            android:layout_below="@id/signUpButton"
            android:layout_centerHorizontal="true"
            android:text="\u00A92015"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
            <TextView
                android:layout_below="@id/signUpButton"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:id="@+id/signUpText"
                android:text="SIGN UP"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="My Accountant is an application that offers accounting services to businesses"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/signUpButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</LinearLayout>