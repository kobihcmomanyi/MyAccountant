<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="5dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/business_info_name_of_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/secondary_color"
        app:met_primaryColor="@color/blue"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="1"
        app:met_clearButton="true"
        app:met_helperText=""
        android:hint="Name of the business"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/business_info_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/secondary_color"
        app:met_primaryColor="@color/blue"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="1"
        app:met_clearButton="true"
        app:met_helperText=""
        android:hint="Location of the business"/>
    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="How best may you describe your business in terms of structure?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.rey.material.widget.RadioButton
        android:id="@+id/sole_proprietorship_radio"
        style="@style/Material.Drawable.RadioButton"
        app:rbd_strokeColor="@color/blue"
        android:text="sole proprietorship"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.RadioButton
        android:id="@+id/partnership_radio"
        style="@style/Material.Drawable.RadioButton"
        app:rbd_strokeColor="@color/blue"
        android:text="partnership"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.RadioButton
        android:id="@+id/company_radio"
        style="@style/Material.Drawable.RadioButton"
        app:rbd_strokeColor="@color/blue"
        android:text="company"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="In terms of size, how may you categorize your business?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.rey.material.widget.RadioButton
        android:id="@+id/small_radio"
        style="@style/Material.Drawable.RadioButton"
        android:text="small"
        app:rbd_strokeColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.RadioButton
        android:id="@+id/medium_radio"
        style="@style/Material.Drawable.RadioButton"
        android:text="medium-sized"
        app:rbd_strokeColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.RadioButton
        android:id="@+id/large_radio"
        style="@style/Material.Drawable.RadioButton"
        app:rbd_strokeColor="@color/blue"
        android:text="large"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="How may you describe your business?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.rey.material.widget.RadioButton
        android:id="@+id/retail_radio"
        style="@style/Material.Drawable.RadioButton"
        android:text="retail"
        app:rbd_strokeColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.RadioButton
        android:id="@+id/service_radio"
        style="@style/Material.Drawable.RadioButton"
        android:text="service"
        app:rbd_strokeColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.RadioButton
        android:id="@+id/wholesale_radio"
        style="@style/Material.Drawable.RadioButton"
        android:text="wholesale"
        app:rbd_strokeColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <com.rey.material.widget.Button
        android:id="@+id/save_btn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        app:rd_enable="true"
        android:background="@color/blue"
        style="@style/Material.Drawable.Ripple.Touch"
        android:textColor="#ffffff"
        android:text="save"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</LinearLayout>
</ScrollView>